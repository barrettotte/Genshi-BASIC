{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run workspace (TMP)",
            "type": "shell",
            "command": "python3 lib/GenshiBASIC/_workspace.py",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run All Tests",
            "type": "shell",
            "command": "cd lib/GenshiBASIC && python3 -m unittest discover",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Run Lexer Tests",
            "type": "shell",
            "command": "cd lib/GenshiBASIC && python3 -m unittest tests.test_lexer",
            "group": "test"
        },
        {
            "label": "Run Parser Tests",
            "type": "shell",
            "command": "cd lib/GenshiBASIC && python3 -m unittest tests.test_parser",
            "group": "test"
        }
    ]
}